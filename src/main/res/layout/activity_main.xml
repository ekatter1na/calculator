<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/image"
    android:focusableInTouchMode="true"
    android:focusedByDefault="true"
    android:forceHasOverlappingRendering="true"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="166dp"
        android:layout_height="44dp"
        android:background="#434B57"
        android:text="Калькулятор"
        android:textColor="#FAF4F4"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.277"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.023" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="179dp"
        android:layout_height="61dp"
        android:layout_marginStart="84dp"
        android:layout_marginBottom="388dp"
        android:background="#434E55"
        android:text="Введите первое слагаемое"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="179dp"
        android:layout_height="61dp"
        android:layout_marginStart="84dp"
        android:layout_marginBottom="248dp"
        android:background="#414E55"
        android:text="Введите второе слагаемое"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/editTextNumber2"
        android:layout_width="81dp"
        android:layout_height="38dp"
        android:layout_marginEnd="148dp"
        android:layout_marginBottom="192dp"
        android:background="#D32F2F"
        android:backgroundTint="#414E55"
        android:ems="10"
        android:inputType="text"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/editTextNumber"
        android:layout_width="81dp"
        android:layout_height="38dp"
        android:layout_marginEnd="148dp"
        android:layout_marginBottom="332dp"
        android:background="#432F2F"
        android:backgroundTint="#434E55"
        android:ems="10"
        android:inputType="text"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/button"
        android:layout_width="290dp"
        android:layout_height="87dp"
        android:layout_marginEnd="36dp"
        android:layout_marginBottom="76dp"
        android:backgroundTint="#414E55"
        android:onClick="onClick"
        android:text="Сложить"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>